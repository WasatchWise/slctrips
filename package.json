{
  "name": "slctrips",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch server/index.ts",
    "dev:frontend": "cd client && vite",
    "dev:simple": "tsx watch server/simple-server.ts",
    "dev:all": "pm2 start ecosystem.config.json",
    "dev:stop": "pm2 stop all",
    "dev:restart": "pm2 restart all",
    "dev:logs": "pm2 logs --nostream",
    "dev:status": "pm2 status",
    "build": "cd client && vite build",
    "build:server": "tsc --project . --outDir dist",
    "build:all": "npm run build && npm run build:server",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "type-check:client": "cd client && tsc --noEmit --skipLibCheck",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "supabase:pull": "supabase db pull",
    "supabase:push": "supabase db push",
    "sync:photos": "tsx scripts/sync-photos-to-supabase.ts",
    "import:data": "tsx scripts/import-full-dataset.ts",
    "daily-sync": "tsx scripts/daily-photo-sync.ts",
    "setup-cron": "tsx scripts/setup-cron.ts",
    "vercel-build": "npm run build",
    "deploy:cloudflare": "wrangler deploy",
    "deploy:vercel": "vercel --prod",
    "db:migrate": "tsx scripts/migrate-database.ts",
    "db:seed": "tsx scripts/seed-database.ts"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@neondatabase/serverless": "^0.9.4",
    "@notionhq/client": "^2.2.14",
    "@sendgrid/mail": "^8.1.5",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.8.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "prettier": "^3.1.1",
    "stripe": "^14.25.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/stripe": "^8.0.417",
    "pm2": "^6.0.11",
    "wrangler": "^3.22.1"
  }
}
